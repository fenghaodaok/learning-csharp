<Window x:Class="WpfApp1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="新增人员" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="姓名:"/>
            <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <TextBlock Text="年龄:"/>
            <TextBox Text="{Binding NewAge, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <TextBlock Text="邮箱:"/>
            <TextBox Text="{Binding NewEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <Button Content="添加人员" Command="{Binding AddCommand}" Height="30" Margin="0,10,0,0"/>
        </StackPanel>

        <DataGrid Grid.Column="1" 
                  ItemsSource="{Binding PeopleList}" 
                  AutoGenerateColumns="True" 
                  CanUserAddRows="False"
                  IsReadOnly="True"/>
    </Grid>
</Window>
